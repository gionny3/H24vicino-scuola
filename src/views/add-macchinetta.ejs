<%- include("./includes/head.ejs") %> 
<main class="flex flex-col  mb-8   items-center justify-center " >
    <form action="//add-macchinetta" method="post" class="flex flex-col gap-4 p-12 w-fit items-center justify-center border-slate-50 border-8" >
        <div class="flex flex-col items-start">
            <label for="" class="text-stone-100 text-md  lg:text-lg xl:text-xl">Nome:</label>
            <input class="text-md  lg:text-lg xl:text-xl w-full" type="text" name="name">
        </div>
        <div class="flex flex-col items-start">
            <label for="" class="text-stone-100 text-md  lg:text-lg xl:text-xl">Luogo:</label>
            <input class="text-md  lg:text-lg xl:text-xl w-full" type="text" name="luogo">
