    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script>
      tailwind.config={
        theme: {
    screens: {
      sm: '450px',
      md: '760px',
      lg: '976px',
      hxl:'1050px', // half xl
      xl: '1440px',
      xs: '390px',
      xxs: '340px',
      xxxs:"280px"
  },
  fontFamily:{
    'roboto':['roboto','sans-serif']
  }
}
      }
    </script>
    <style>
      /* Custom styling for the thumb */
      .avviso {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: #ffcccb; /* Colore di sfondo */
    color: #8b0000; /* Colore del testo */
    padding: 10px 20px;
    border-radius: 5px;
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2); /* Ombra */
    opacity: 1; /* Opacità iniziale */
    transition: opacity 0.5s ease; /* Transizione dell'opacità */
}

.avviso-nascosto {
    opacity: 0; /* Opacità finale */
}
      .pageContent{
      margin: 0 auto;
      text-align: center;
      max-width: 1280px;
      padding: 2rem;
      }
      input[type="range"]::-webkit-slider-thumb {
        width: 20px; /* Set the width of the thumb */
        height: 20px; /* Set the height of the thumb */
        background-color: rgb(126 34 206); /* Set the background color of the thumb to Tailwind's purple 700 */
        border: 2px solid #fff; /* Set the border of the thumb */
        border-radius: 50%; /* Make the thumb circular */
        cursor: pointer; /* Change the cursor to pointer when hovering over the thumb */
        -webkit-appearance: none; /* Remove default styling for WebKit browsers */
        appearance: none; /* Remove default styling for non-WebKit browsers */
      }
      .radiotype:checked {
      appearance: none;
      width: 1.2em; /* Adjust the size of the checked radio button */
      height: 1.2em; /* Adjust the size of the checked radio button */
      background-color: rgb(126 34 206); /* Set the background color of the checked radio button to Tailwind's purple 700 */
      border-radius: 50%; /* Make the checked radio button circular */
      cursor: pointer; /* Change the cursor to pointer when hovering over the checked radio button */
    }
    .result-modal[open] {
      animation: slide-in-from-top 0.35s ease-out;
    }
    .result-modal::backdrop {
      background: rgba(0, 0, 0, 0.9);
    }
    #root{
      width: 100%;
      padding: 0%;
      margin: 0 auto;
      text-align: center;

    }
    .modal{
      display: none;
      position: fixed;
      z-index: 1000;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      padding: 20px;
      border-radius: 8px;
    }
    .close {
      position: absolute;
      top: 10px;
      right: 10px;
      font-size: 24px;
      cursor: pointer;
    }
    .overlay {
      display: none;
      position: fixed;
      z-index: 900;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
    }
    @keyframes slide-in-from-top {
      0% {
        transform: translateY(-15%);
        opacity: 0;
      }
      100% {
        transform: translateY(0);
        opacity: 1;
      }
    }

    @keyframes flash {
      0% {
        opacity: 0.5;
      }
      50% {
        opacity: 1;
      }
      100% {
        opacity: 0.5;
      }
    }

    .loader {
  border: 5px solid #f3f3f3;
  border-top: 5px solid #3498db;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  animation: spin 1s linear infinite;
  margin: 20px auto;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

    </style>
</head>